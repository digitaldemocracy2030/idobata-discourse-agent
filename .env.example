# Discourse設定
DISCOURSE_API_KEY=your_api_key_here
DISCOURSE_BASE_URL=your_discourse_url_here
DISCOURSE_API_USERNAME=your_username_here

# アプリケーション設定
APP_API_KEY=your_app_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# デバッグ設定
DRY_RUN_MODE=true  # trueに設定すると、Discourseへの投稿がシミュレーションモードになります

# Slack設定
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Vertex AI設定
VERTEX_PROJECT_ID=your_project_id_here
VERTEX_LOCATION=asia-northeast1
VECTOR_SEARCH_INDEX_ID=your_index_id_here
VECTOR_SEARCH_ENDPOINT_ID=your_endpoint_id_here